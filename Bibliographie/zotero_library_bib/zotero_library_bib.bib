	number = {9},
	urldate = {2023-11-20},
	journal = {Ecology},
	author = {Hutchings, Michael J. and John, Elizabeth A. and Wijesinghe, Dushyantha K.},
	year = {2003},
	keywords = {1.Emilie},
	pages = {2322--2334},
	annote = {about how roots are flexible and react to different nutrient concentrations
},
	file = {Hutchings et al. - 2003 - TOWARD UNDERSTANDING THE CONSEQUENCES OF SOIL HETE.pdf:files/508/Hutchings et al. - 2003 - TOWARD UNDERSTANDING THE CONSEQUENCES OF SOIL HETE.pdf:application/pdf},
