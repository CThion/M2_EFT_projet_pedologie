	journal = {PLOS ONE},
	author = {Allié, Elodie and Pélissier, Raphaël and Engel, Julien and Petronelli, Pascal and Freycon, Vincent and Deblauwe, Vincent and Soucémarianadin, Laure and Weigel, Jean and Baraloto, Christopher},
	month = nov,
